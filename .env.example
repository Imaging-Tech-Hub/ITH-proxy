# =============================================================================
# Django Configuration
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DICOM Receiver Configuration
# =============================================================================

# DICOM Network Settings
DICOM_AE_TITLE=DICOMRCV
DICOM_PORT=11112
DICOM_BIND_ADDRESS=  # Empty = bind to all interfaces

# Storage Configuration
DICOM_STORAGE_DIR=storage
DICOM_LOG_DIR=storage/logs

# DICOM Protocol Configuration
DICOM_STUDY_TIMEOUT=60  # seconds
DICOM_MAX_PDU_SIZE=16384  # bytes
DICOM_ACSE_TIMEOUT=30  # seconds
DICOM_MAX_ASSOCIATIONS=50

# Logging Configuration
DICOM_LOG_LEVEL=INFO

# PHI Anonymization
DICOM_ANONYMIZE_PATIENTS=True

# Auto-start DICOM server with Django
DICOM_AUTO_START=True

# =============================================================================
# ITH API Configuration
# =============================================================================

# ITH API Base URL
ITH_URL=http://localhost:8000

# Proxy Authentication Token (REQUIRED - get this from ITH dashboard)
ITH_TOKEN=your-token-here

# Proxy software version (used in WebSocket communication)
PROXY_VERSION=1.0.0

# =============================================================================
# Study Archive & Upload Configuration
# =============================================================================

# Archive directory for ZIP files
ARCHIVE_DIR=storage/archives

# Upload retry settings
UPLOAD_MAX_RETRIES=3
UPLOAD_RETRY_DELAY=5

# Cleanup after successful upload (delete original DICOM files)
# WARNING: Set to True only if you want to delete files after upload
CLEANUP_AFTER_UPLOAD=True

# =============================================================================
# Database Configuration
# =============================================================================

# Database engine: 'sqlite' or 'postgresql'
DATABASE_ENGINE=sqlite

# SQLite Configuration (used when DATABASE_ENGINE=sqlite)
DATABASE_PATH=storage/database/db.sqlite3

# PostgreSQL Configuration (used when DATABASE_ENGINE=postgresql)
POSTGRES_DB=ith_proxy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# Additional Settings
# =============================================================================

# Timezone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us
