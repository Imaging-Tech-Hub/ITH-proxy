# =============================================================================
# Django Configuration
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DICOM Receiver Configuration
# =============================================================================

# DICOM Network Settings (used as defaults - overridden by API configuration)
# NOTE: These are initial defaults. After first startup, the ProxyConfiguration
# model becomes the source of truth and can be updated via:
# 1. Django Admin UI
# 2. API configuration endpoint (on startup)
DICOM_AE_TITLE=DICOMRCV
DICOM_PORT=11112
DICOM_BIND_ADDRESS=  # Empty = bind to all interfaces

# Storage Configuration
DICOM_STORAGE_DIR=storage
DICOM_LOG_DIR=storage/logs

# DICOM Protocol Configuration
DICOM_STUDY_TIMEOUT=60  # seconds
DICOM_MAX_PDU_SIZE=16384  # bytes
DICOM_ACSE_TIMEOUT=30  # seconds
DICOM_MAX_ASSOCIATIONS=50

# Logging Configuration
DICOM_LOG_LEVEL=INFO

# PHI Anonymization
DICOM_ANONYMIZE_PATIENTS=True

# Auto-start DICOM server with Django
DICOM_AUTO_START=True

# =============================================================================
# Laminate API Configuration
# =============================================================================

