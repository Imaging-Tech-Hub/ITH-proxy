# =============================================================================
# Django Configuration
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (required for HTTPS)
# Add your HTTPS URLs here, e.g., https://localhost,https://your-domain.com
CSRF_TRUSTED_ORIGINS=https://localhost,https://127.0.0.1

# =============================================================================
# DICOM Receiver Configuration
# =============================================================================

# DICOM Network Settings
DICOM_AE_TITLE=DICOMRCV
DICOM_PORT=11112
# DICOM_BIND_ADDRESS: Empty = bind to all interfaces
DICOM_BIND_ADDRESS=

# Storage Configuration
DICOM_STORAGE_DIR=data/studies
DICOM_LOG_DIR=data/logs

# DICOM Protocol Configuration
# DICOM_STUDY_TIMEOUT: seconds - time to wait for all instances of a study
DICOM_STUDY_TIMEOUT=60
# DICOM_MAX_PDU_SIZE: bytes - maximum protocol data unit size
DICOM_MAX_PDU_SIZE=16384
# DICOM_ACSE_TIMEOUT: seconds - association establishment timeout
DICOM_ACSE_TIMEOUT=30
# DICOM_DIMSE_TIMEOUT: seconds - DIMSE message timeout (important for C-GET with many instances)
DICOM_DIMSE_TIMEOUT=60
# DICOM_NETWORK_TIMEOUT: seconds - general network timeout
DICOM_NETWORK_TIMEOUT=60
DICOM_MAX_ASSOCIATIONS=50

# Logging Configuration
DICOM_LOG_LEVEL=INFO

# PHI Anonymization
DICOM_ANONYMIZE_PATIENTS=True

# Auto-start DICOM server with Django
DICOM_AUTO_START=True

# =============================================================================
# ITH API Configuration
# =============================================================================

# ITH API Base URL
ITH_URL=http://localhost:8000

# Proxy Authentication Token (REQUIRED - get this from ITH dashboard)
ITH_TOKEN=your-token-here

# Proxy software version (used in WebSocket communication)
PROXY_VERSION=1.0.0

# Proxy Host IP (optional - manual override for Docker/NAT scenarios)
# If not set, will auto-detect. Set this if running in Docker and auto-detection fails.
# Example: PROXY_HOST_IP=192.168.1.100
PROXY_HOST_IP=

# Proxy API Port (default: 8080 in Docker, 8000 for development)
# HTTP port where Django API server is running
API_PORT=8080

# Proxy API URL (optional - manual override)
# The base API URL that will be sent to ITH backend for PHI resolution
# If not set, will auto-construct as http://{ip_address}:{API_PORT}/api
# This is useful when running behind a reverse proxy or using custom domain
# Example: PROXY_API_URL=https://proxy.example.com/api
PROXY_API_URL=

# =============================================================================
# Study Archive & Upload Configuration
# =============================================================================

# Archive directory for ZIP files
ARCHIVE_DIR=data/archives

# Upload retry settings
UPLOAD_MAX_RETRIES=3
UPLOAD_RETRY_DELAY=5

# Cleanup after successful upload (delete original DICOM files)
# WARNING: Set to True only if you want to delete files after upload
CLEANUP_AFTER_UPLOAD=True

# =============================================================================
# Database Configuration
# =============================================================================

# Database engine: 'sqlite' or 'postgresql'
DATABASE_ENGINE=sqlite

# SQLite Configuration (used when DATABASE_ENGINE=sqlite)
DATABASE_PATH=data/database/db.sqlite3

# PostgreSQL Configuration (used when DATABASE_ENGINE=postgresql)
POSTGRES_DB=ith_proxy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# HTTPS/SSL Configuration
# =============================================================================

# HTTP and HTTPS ports (default: 80 for HTTP, 443 for HTTPS)
HTTP_PORT=80
HTTPS_PORT=443

# Force SSL redirect (redirect all HTTP traffic to HTTPS)
# Only enable in production with valid SSL certificates
SECURE_SSL_REDIRECT=False

# =============================================================================
# Cache Configuration
# =============================================================================

# Cache timeout in seconds (default: 300 = 5 minutes)
# PHI metadata queries are cached to improve performance
# Cache is automatically invalidated when data changes
# Set to 0 to disable caching
CACHE_TIMEOUT=300

# =============================================================================
# Additional Settings
# =============================================================================

# Timezone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us
